{
  "name": "invoicedoc2",
  "version": "2.0.0",
  "description": "InvoiceDoc2 - Invoice Management System",
  "scripts": {
    "docker:start": "./scripts/docker-start.sh",
    "docker:stop": "./scripts/docker-stop.sh",
    "docker:logs": "./scripts/docker-logs.sh",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:db:start": "./scripts/docker-db-start.sh",
    "docker:db:stop": "./scripts/docker-db-stop.sh",
    "docker:db:check": "./scripts/docker-db-check.sh",
    "docker:db:logs": "docker-compose -f database/compose.yaml logs -f",
    "docker:db:ps": "docker-compose -f database/compose.yaml ps"
  }
}
